//generating the map with its corresponding tiles
void generateMap(int[][] map) {
  boolean block;
  for (int i = 0; i < map.length; i++) {
    for (int j = 0; j < map[i].length; j++) {
      //if we are not on the edge of the map
      String path = "data/tile/tile" + map[i][j] + ".png";
      if (i != 0 && j !=0 && i != map.length - 1 && j != map[i].length - 1) {
        switch(map[i][j]) {
          case TILE_SOLID:
          block = true; //solid block
            tiles.add(new Tile(path, new PVector(j * tileSize, i * tileSize), block));
            break;
          case TILE_EMPTY:
            block = false;
            tiles.add(new Tile(path, new PVector(j * tileSize, i * tileSize), block));
            break;
          case TILE_DOOR:
            block = false;
            tiles.add(new Door(path, new PVector(j * tileSize, i * tileSize), block));
            break;
          case TILE_BLOCKADE:
            block = true;
            tiles.add(new Blockade(path, new PVector(j * tileSize, i * tileSize), block));
            break;
          default:
            break; //do nothing
        }
      } 
      else {
        block = true;
        tiles.add(new Tile(path, new PVector(j * tileSize, i * tileSize), block));
      }
    }
  }
}


  
